button(type="button").chat__open-button.js-chat__open-button._hidden
    include ../icons/chat.svg

.chat._flex-column.js-chat._hidden
    .chat__header
        h3.chat__title Чат
        button(type="button").chat__cancel.js-chat__cancel
            include ../icons/cancel.svg
